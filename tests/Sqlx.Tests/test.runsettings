<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- 测试运行配置 -->
  <RunConfiguration>
    <!-- 测试会话超时(毫秒) - 2分钟 -->
    <TestSessionTimeout>120000</TestSessionTimeout>
    
    <!-- 最大并行测试线程数 -->
    <MaxCpuCount>4</MaxCpuCount>
    
    <!-- 结果目录 -->
    <ResultsDirectory>.\TestResults</ResultsDirectory>
    
    <!-- 目标平台 -->
    <TargetPlatform>x64</TargetPlatform>
    
    <!-- 目标框架 -->
    <TargetFrameworkVersion>net9.0</TargetFrameworkVersion>
  </RunConfiguration>

  <!-- MSTest 配置 -->
  <MSTest>
    <!-- 并行执行 -->
    <Parallelize>
      <Workers>4</Workers>
      <Scope>ClassLevel</Scope>
    </Parallelize>
    
    <!-- 测试超时 (毫秒) - 60秒 (容器启动需要) -->
    <TestTimeout>60000</TestTimeout>
    
    <!-- 失败后继续 -->
    <ForcedLegacyMode>false</ForcedLegacyMode>
    
    <!-- 捕获跟踪输出 -->
    <CaptureTraceOutput>true</CaptureTraceOutput>
  </MSTest>

  <!-- 数据收集 -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <!-- 代码覆盖率 -->
      <DataCollector friendlyName="Code Coverage" uri="datacollector://Microsoft/CodeCoverage/2.0" assemblyQualifiedName="Microsoft.VisualStudio.Coverage.DynamicCoverageDataCollector, Microsoft.VisualStudio.TraceCollector, Version=11.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a">
        <Configuration>
          <CodeCoverage>
            <ModulePaths>
              <Include>
                <ModulePath>.*Sqlx\.dll$</ModulePath>
              </Include>
              <Exclude>
                <ModulePath>.*Tests\.dll$</ModulePath>
              </Exclude>
            </ModulePaths>
          </CodeCoverage>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- 日志记录 -->
  <LoggerRunSettings>
    <Loggers>
      <Logger friendlyName="console" enabled="True">
        <Configuration>
          <Verbosity>minimal</Verbosity>
        </Configuration>
      </Logger>
    </Loggers>
  </LoggerRunSettings>
</RunSettings>
