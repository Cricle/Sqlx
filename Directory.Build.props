<Project>
  <!-- 通用项目配置 -->
  <PropertyGroup>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- 统一版本管理 -->
  <PropertyGroup>
    <Version>0.4.0</Version>
    <AssemblyVersion>0.4.0.0</AssemblyVersion>
    <FileVersion>0.4.0.0</FileVersion>
  </PropertyGroup>

  <!-- NuGet 包通用信息 -->
  <PropertyGroup>
    <Authors>Sqlx Team</Authors>
    <Company>Sqlx</Company>
    <Product>Sqlx</Product>
    <Copyright>Copyright © 2025 Sqlx Team</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/sqlxorg/sqlx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sqlxorg/sqlx</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <!-- VS SDK 包版本定义 -->
  <PropertyGroup>
    <VSSdkVersion>17.9.37000</VSSdkVersion>
    <VSBuildToolsVersion>17.9.3168</VSBuildToolsVersion>
    <RoslynVersion>4.8.0</RoslynVersion>
    <VSLanguageServicesVersion>17.9.187</VSLanguageServicesVersion>
  </PropertyGroup>

  <!-- 禁用不必要的分析器警告 -->
  <PropertyGroup>
    <NoWarn>$(NoWarn);CS1701;CS1702;CS8002;CS8618;CS8625;CS8600;CS8602;CS8604;CS8603;CS8601;VSTHRD100;VSTHRD010;VSSDK006;RS1035;SA1209;SA1111</NoWarn>
  </PropertyGroup>
</Project>
