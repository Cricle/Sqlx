<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>sqlx-validate</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>sqlx-validate</ToolCommandName>
    <PackageId>Sqlx.TemplateValidator.Tool</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>Cricle</Authors>
    <Description>Command-line tool for validating Sqlx SQL templates</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Sqlx.Generator\Sqlx.Generator.csproj" />
    <ProjectReference Include="..\..\src\Sqlx\Sqlx.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" />
  </ItemGroup>

</Project>
