<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<NoWarn>$(NoWarn);RS1024;CS1591</NoWarn>
		<LangVersion>10.0</LangVersion><Nullable>enable</Nullable>
		<WarningsAsErrors />
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<WarningsNotAsErrors>CS8618;CS8625;CS8629;CS8604;CS8601;CS8602;CS8603;CS8765</WarningsNotAsErrors>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<!-- Package Metadata -->
		<Version>2.0.2</Version>
		<Authors>Sqlx Team</Authors>
		<Company>Sqlx</Company>
		<Product>Sqlx.Core</Product>
		<PackageId>Sqlx.Core</PackageId>
		<Title>Sqlx.Core - Core Runtime Library for Sqlx ORM</Title>
		<PackageTags>orm;sql;runtime;core;primary-constructor;record;csharp;dotnet;performance;type-safe</PackageTags>
		<Description>Core runtime library for Sqlx ORM containing all runtime components, attributes, and ExpressionToSql functionality. This package provides the foundational types and utilities used by Sqlx-generated code.</Description>
		<PackageProjectUrl>https://github.com/your-org/Sqlx</PackageProjectUrl>
		<RepositoryUrl>https://github.com/your-org/Sqlx</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Copyright>Copyright Â© 2025 Sqlx Team</Copyright>
		<PackageReleaseNotes>v2.0.2: Core runtime library extracted from Sqlx generator package. Contains all runtime components and ExpressionToSql functionality.</PackageReleaseNotes>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>

		<!-- Documentation -->
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Memory" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" Visible="false" />
		<None Include="../Sqlx.Generator/bin/$(Configuration)/netstandard2.0/Sqlx.Generator.dll" Pack="true" PackagePath="analyzers/dotnet" Visible="true" />
	</ItemGroup>

</Project>
